@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<SchoolDashboard.Web.Models.CalendarEvent>
@{
    Layout = "_Layout.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <form class="needs-validation" action="/ControlPanel/SaveCalendarEvent" method="post" novalidate>
            <div class="form-group">
                <label for="description">Опис</label>
                <input type="text" class="form-control" id="description" name="Description" value="@Model.Description" required>
                <div class="invalid-feedback">
                    Введіть опис
                </div>
            </div>

            <div class="form-group">
                <label for="place">Місце проведення</label>
                <input type="text" class="form-control" id="place" name="Place" value="@Model.Place">
                <div class="invalid-feedback">
                    Введіть місце проведення
                </div>
            </div>

            <div class="form-group">
                <label for="datetime">Дата і час</label>
                <input type="datetime-local" class="form-control" id="datetime" name="DateTimeString" value="@Model.DateTime.ToString("yyyy-MM-ddTHH:mm")" required>
                <div class="invalid-feedback">
                    Введіть дату і час
                </div>
            </div>

            <div class="form-check">
                @if (Model.HasTime)
                {
                    <input class="form-check-input" type="checkbox" id="hasTime" name="HasTime" checked>
                }
                else
                {
                    <input class="form-check-input" type="checkbox" id="hasTime" name="HasTime">
                }
                <label class="form-check-label" for="hasTime">
                    Точний час (не цілий день)
                </label>
            </div>

            <input type="hidden" name="Id" value="@Model.Id">

            <button type="submit" class="btn btn-primary">Зберегти</button>
        </form>
    </div>
</div>